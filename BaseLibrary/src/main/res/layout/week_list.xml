<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/one"
        android:text="Mon"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_week_list_selector"/>

    <TextView
        android:id="@+id/two"
        android:text="Tue"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_week_list_selector"/>

    <TextView
        android:id="@+id/three"
        android:text="Wed"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_week_list_selector"/>

    <TextView
        android:id="@+id/four"
        android:text="Thu"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_week_list_selector"/>

    <TextView
        android:id="@+id/five"
        android:text="Fri"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_week_list_selector"/>

    <TextView
        android:id="@+id/six"
        android:text="Sat"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_week_list_selector"/>

    <TextView
        android:id="@+id/seven"
        android:text="Sun"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_week_list_selector"/>

</LinearLayout>