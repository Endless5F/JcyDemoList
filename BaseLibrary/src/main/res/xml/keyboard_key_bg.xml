<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <solid android:color="#5c7c9c"/>
            <corners
                android:bottomLeftRadius="4dip"
                android:bottomRightRadius="4dip"
                android:topLeftRadius="4dip"
                android:topRightRadius="4dip"/>
            <!--<stroke-->
                <!--android:width="1px"-->
                <!--android:color="#0f243a"/>-->
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <!--<solid android:color="#dbdbdb"/>-->
            <gradient
                android:angle="180"
                android:endColor="#05bde9"
                android:startColor="#10dab4" />

            <corners
                android:bottomLeftRadius="4dip"
                android:bottomRightRadius="4dip"
                android:topLeftRadius="4dip"
                android:topRightRadius="4dip"/>
        </shape>
    </item>
</selector>